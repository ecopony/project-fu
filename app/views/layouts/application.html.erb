<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag "jquery-ui-1.8.6.custom" %>
    <%= javascript_include_tag 'rails' %>
    <%= javascript_include_tag 'jquery-1.4.4.min' %>
    <%= javascript_include_tag 'jquery-ui-1.8.6.custom.min' %>
    <%= javascript_include_tag 'application' %>
    
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <div id="top-nav">
        <%= link_to 'Dashboard', root_path, { :id => 'nav-dashboard' } %>
        <%= link_to 'Projects', projects_path, { :id => 'nav-projects' } %>
      </div>
      
      <div id="user_nav">
        <% if user_signed_in? %>
          Signed in as <%= current_user.email %>.
          <%= link_to "Sign out", destroy_user_session_path %>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path %> or
          <%= link_to "Sign in", new_user_session_path %>
        <% end %>
      </div>  
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
